<h1>Burger App</h1>

<div class="container">

  <div class="row">
    


    <div class="col s1">
    </div>

    <div class="col s4">

      <h3 class="center-align">Create Your Own Burger</h3>
      
      <form class="create-form">

        <div class="form-group">
          <label for="bu"></label>
          <input type="text" id="bu" name="name">
        </div>
        
        <button type="submit" class="center-align">Create Burger</button>

      </form>

    </div>





  </div>

  <div class="row" id="lists">

    <div class="col s6">
      <h3>Ready to eat:</h3>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col s6">
      <h3>Already eaten:</h3>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devour=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>

  